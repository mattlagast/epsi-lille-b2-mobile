<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/ex1_relative_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/ex1_email" />

    <EditText
        android:id="@+id/ex1_relative_email_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ex1_relative_email_text"
        android:layout_alignBaseline="@id/ex1_relative_email_text"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/ex1_relative_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/ex1_relative_email_text"
        android:text="@string/ex1_password"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ex1_relative_password_text"
        android:layout_alignBottom="@id/ex1_relative_password_text"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/ex1_relative_password_text"
        android:text="Login" />


</RelativeLayout>